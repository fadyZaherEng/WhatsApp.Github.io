<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Activities.VerfiyPhoneActivity">
    <include layout="@layout/app_bar_layout"
        android:id="@+id/verfiyPhoneToolBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/phone_icon"
                android:src="@drawable/ic_baseline_no_encryption_24"
                android:layout_marginTop="@dimen/_40sdp"/>
            <TextView
                android:layout_below="@+id/phone_icon"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="@string/wait_for_the_code_i_sent_you"
                android:textColor="#070707" />
            <EditText
                android:id="@+id/editTextCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:padding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingStart="@dimen/_8sdp"
                android:hint="Enter the Code"
                android:inputType="phone"
                />
            <Button
                android:id="@+id/buttonSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:text="@string/sign_in"
                android:layout_below="@id/editTextCode"
                android:layout_marginBottom="@dimen/_30sdp"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_19ssp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>